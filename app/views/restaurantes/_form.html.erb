<section class="ftco-section img" style="background-image: url(https://colorlib.com/preview/theme/feliciano/images/bg_3.jpg)" data-stellar-background-ratio="0.5">
  <%= form_with(model: restaurante, local: true) do |form| %>
    <% if restaurante.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(restaurante.errors.count, "error") %> prohibited this restaurante from being saved:</h2>

        <ul>
        <% restaurante.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="container">
    <div class="row d-flex">
    <div class="col-md-7 ftco-animate makereservation p-4 px-md-5 pb-md-5">
    <div class="heading-section ftco-animate mb-5 text-center">
    <span class="subheading">foodie order</span>
    <h2 class="mb-4">Datos Restaurante</h2>
    </div>

    <div class="row">
    <div class="col-md-6">
    <div class="form-group">
      <div class="field">
        <%= form.label :name, "Nombre del Restaurante: " %>
        <%= form.text_field :name %>
      </div>
    </div>
    </div>
    <div class="col-md-6">
    <div class="form-group">
      <div class="field">
        <%= form.label :mail, "Correo electrónico: " %>
        <%= form.text_field :mail %>
      </div>
    </div>
    </div>
    <div class="col-md-6">
    <div class="form-group">
      <div class="field">
        <%= form.label :phone_number, "Número de Teléfono: " %>
        <%= form.text_field :phone_number %>
      </div>
    </div>
    </div>
    <div class="col-md-6">
    <div class="form-group">
      <div class="field">
        <%= form.label :adress, "Dirección: " %>
        <%= form.text_field :adress %>
      </div>
    </div>
    </div>
    <div class="col-md-4">
    <div class="form-group">
      <div class="field">
        <%= form.label :avatar, 'Agregar imagen:' %>
        <%= form.file_field :avatar %>
      </div>
    </div>
    <div class="col-md-12 mt-3">
    <div class="form-group text-center">
      <div class="actions">
        <%= form.submit "Confirmar", value: "Confirmar", class: "btn btn-primary py-3 px-5"%>
      </div>
      <% end %>
      <%= link_to 'Atrás', restaurantes_path %>
    </div>
    </div>
     </div>
    </div>
    </div>
    </section>
