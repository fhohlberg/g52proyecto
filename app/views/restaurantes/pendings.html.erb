<div class="heading-section ftco-animate mb-5 text-center">
<span class="subheading">foodie order</span>
<h1>Restaurantes Pendientes</h1>
</div>
<br>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

<div class="media">
  <div class="media-body">
    <table class="table table">
      <thead class="thead-light">
        <tr>
          <th>Nombre</th>
          <th>Mail</th>
          <th>Dirección</th>
          <th>Teléfono</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @restaurantes = Restaurante.all %>
        <% @restaurantes.each do |restaurante| %>
          <% if !(restaurante.approved) %>
            <tr>
              <td><%= restaurante.name %></td>
              <td><%= restaurante.mail %></td>
              <td><%= restaurante.adress %></td>
              <td><%= restaurante.phone_number %></td>
              <td><%= link_to "<i class=material-icons md-dark>visibility</i>".html_safe, restaurante%></td>
              <% if current_admin %>
                  <td><%= button_to "Aceptar", restaurantes_accept_path(:id => restaurante), method: :post %></td>
                  <td><%= button_to "Rechazar", restaurante, data: { confirm: "¿Estás seguro?" }, method: :delete %></td>
              <% end %>
            </tr>
          <% end %>
        <% end %>
      <tbody>
    </table>
  </div>
</div>